<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="24dp"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_horizontal">

        <!-- Sapaan -->
        <TextView
            android:id="@+id/textGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Genta "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Kartu Profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/saya"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nama"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#F9F9F9"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informatics Student"
                    android:textSize="14sp"
                    android:textColor="#F9F9F9" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol Shortcut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/food"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soto dan Mie Ayam"
                    android:layout_marginTop="8dp"
                    android:textColor="#F9F9F9"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/teacup"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kopi dan Air Putih"
                    android:layout_marginTop="8dp"
                    android:textColor="#F9F9F9"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/interested"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kopi dan Fotografi"
                    android:layout_marginTop="8dp"
                    android:textColor="#F9F9F9"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/hobby"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Touring dan Nongkrong"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="#F9F9F9"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="13dp"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ambition"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naik Haji"
                    android:layout_marginTop="8dp"
                    android:textColor="#F9F9F9"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</ScrollView>
